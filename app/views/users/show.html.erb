<h1>Nuevo Empleado</h1>

<section class="card">
  <p style="color: green"><%= notice %></p>
  <div class="card" style="width: 36rem;">
    <img src="https://i0.wp.com/sonria.com/wp-content/uploads/2016/08/2165947w620.jpg?fit=620%2C348&ssl=1" class="card-img-top" alt="...">
    <div class="card-header">
      <h5 class="card-title">Nombre: <%= @user.name %></h5>
    </div>
    
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Correo Electr√≥nico: <%= @user.email %></li>
        <li class="list-group-item">Rol: <%= @user.role %></li>
        <li class="list-group-item">Fecha de registro: <%= I18n.l(@user.created_at, format: '%d/%m/%Y') %></li>
      </ul>
    </div>
    <div class="card-footer">
      <%= link_to "Editar", edit_user_path(@user), class: "card-link" %>
      <%= link_to "Volver", users_path, class: "card-link" %>
      <%= link_to "Eliminar", @user, data: {turbo_method: :delete}, class: "card-link" %>
    </div>
  </div>
</section>
