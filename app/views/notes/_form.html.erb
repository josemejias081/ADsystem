<%= form_for @note do |f| %>
  <% if @note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row border border-success">
    <div class=" col-md-12 form-group my-3">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre de la nota' %>
    </div>
  </div>

  <h1>Campos</h1>
  <div id='add'class="row mb-3 border border-danger" >
    <div class="col-md-6">Seleccione Producto</div>
    <div class="col-md-3">Cantidad</div>
    <div class="col-md-1">Acciones</div>
    <%= f.fields_for :notes_products do |notes_product| %>
      <%= render 'add_fields', form: notes_product %>
    <% end %>
  </div>

  <div class=" form-actions mb-3 btn btn-primary btn-xs btn-block">
    <%= link_to_add_nested(f, :notes_products, '#add', tag: 'span', partial: 'add_fields') do %>
      <span><span class= "" >Agregar Campo</span></span>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class:"btn btn-sm btn-success mt-3"%>
  </div>
<% end %>
