<div class="card mt-5">
  <div class="card-header bg-primary">
    <h1 class="card-title pt-2 text-white">Notas</h1>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Entidad</th>
            <th>Tipo de nota</th>
            <th>Fecha</th>
            <th>Acci√≥n</th>
          </tr>
        </thead>
        <tbody>
          <% @notes.each do |note| %>
            <tr>
              <td><%= note.name %></td>
              <td><%= note.entity.name if note.entity %></td>
              <td><%= note.transaction_type %></td>
              <td><%= I18n.l(note.created_at, format: '%d/%m/%Y') %></td>
              <td class="d-grid gap-2">
                <%= link_to 'Ver', note, class: "btn btn-info btn-block text-white" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to '+ Agregar Nota', new_note_path, class: "btn btn-info btn-sm text-white fw-bold" %>
  </div>
</div>

