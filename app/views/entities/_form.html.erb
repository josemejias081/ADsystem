<div class="card">
  <div class="card-body">
    <%= form_with model: @entity do |f| %>
      <% if @entity.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(entity.errors.count, "error") %> prohibio que este usuario se guardara:</h3>
          <ul>
            <% entity.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end%>
      
      <div class="row">
        <div class=" col-md-6 form-group">
          <%= f.label :Nombre %>
          <%= f.text_field :name,class: 'form-control' %>
        </div>

        <div class="col-md-6 form-group">
          <%= f.label :Dirección %>
          <%= f.text_field :address,class: 'form-control'%>
        </div>

        <div class="col-md-6 form-group">
          <%= f.label :Teléfono %>
          <%= f.text_field :phone,class: 'form-control'%>
        </div>

        <div class="col-md-6 form-group">
          <%= f.label :Correo %>
          <%= f.text_field :email,class: 'form-control'%>
        </div>

        <div class="form-check form-switch col-md-6 mt-3 mx-3">
          <%= f.label "Marcar si es cliente", class: "form-check-label" %>
          <%= f.check_box :client, class: "form-check-input", placeholder: "" %>
        </div>

        <div class="form-check form-switch col-md-6 mt-3 mx-3">
          <%= f.label "Marcar si es Proveedor", class: "form-check-label" %>
          <%= f.check_box :supplier, class: "form-check-input", placeholder: "" %>
        </div>

        <div class="actions">
          <%= f.submit "Guardar", class:"btn btn-sm btn-success mt-3" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
