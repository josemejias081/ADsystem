<h1>Clientes / Proveedores</h1>
<div class="row">
  <div class="card">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Estatus</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @entities.each do |entity| %>
            <tr id="cliente_<%= entity.id %>" >
              <td><%= entity.name %></td>
              <td><%= entity.address %></td>
              <td><%= entity.phone %></td>
              <td><%= entity.email %></td>
              <% if entity.client? %>
                <td>Cliente</td>
              <% elsif entity.supplier? %>
                <td>Proveedor</td>
              <% end %>
              <td class="d-grid gap-2">
                <%= link_to 'Ver', entity, class: "btn btn-info btn-block text-white" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
