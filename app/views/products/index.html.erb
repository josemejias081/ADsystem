<h1>Productos</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-3">
      <div class="card">
        <img src="https://www.tuli-shop.com/media/catalog/category/6648_Linear_Guideways_Economy_Hiwin_interchangeable.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">Producto: <%= product.name %></h5>
          <p class="card-text">Descripción: <%= product.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Existencia: <%= product.stock %></li>
          <li class="list-group-item">Precio: <%= product.price %></li>
          <li class="list-group-item">Categoría: <%= product.category.name %></li>
        </ul>
        <div class="card-body">
          <%= link_to 'Ver', product, class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


