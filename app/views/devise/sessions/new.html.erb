<section class="section-login mt-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-lg-7 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 mb-3">Hola!</h1>
      <p class="col-lg-10 fs-4">Bienvenido a tu espacio administrativo Online</p>
      <hr class="my-4">
      <p class="col-lg-10 fs-4">Espero que tu jornada laboral sea muy productiva</p>
    </div>
    <div class="col-md-10 mx-auto col-lg-5">
      <div class="p-4 p-md-5 border rounded-3 bg-light">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group mb-4">
            <%= f.label :email, "Correo" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :password, "Clave de acceso" %><br />
            <%= f.password_field :password, autocomplete: "current-password",class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group mb-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "RecuÃ©rdame" %>
            </div>
          <% end %>

          <div class="actions d-grid">
            <%= f.submit "Entrar", class: " w-100 btn btn-lg btn-primary" %>
          </div>
        <% end %>
        <small class="text-muted"><%= render "devise/shared/links" %></small>
      </div>
    </div>
  </div>
</section>

