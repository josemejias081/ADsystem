<% if user_signed_in? %>
  <section class="text-center text-mute">
    <div class="mt-5">
      <main class="px-3">
        <h2>Hola <%= current_user.name %>!</h2>
        <h2>Hola <%= current_user.role %>!</h2>
        <p class="lead">Te has autenticado correctamente, ahora estas listo para interactuar con esta aplicación!</p>
        <p class="lead">Recuerda leer los datos introducidos antes de hacer cualquier registro, así te evitas trabajar más!</p>
        <p class="lead">
          <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "btn btn-lg btn-secondary fw-bold border-white bg-info" %>
        </p>
      </main>
    </div>

  <% @users = User.all%>
    <% @users.each do |user| %>
          <ul>
            <li><%= user.id %></li>
            <li><%= user.name %></li>
            <li><%= user.email %></li>
            <li class="text-capitalize"><%= user.role %></li>
            <li><%= user.created_at %></li>
            <li class="d-grid gap-2"><%= link_to 'Ver', user, class: "btn btn-info btn-block text-white" %></li>
          </ul>
          <% end %>
  </section>
<% else%>
  <h1>Hello world</h1>
<% end %>
